FROM nginx:latest

COPY ./nginx/nginx.conf /etc/nginx/nginx.conf
COPY ./nginx/forkrecipes-ssl.nginx.conf /etc/nginx/sites-available/
COPY ./nginx/ssl  /etc/nginx/ssl

RUN mkdir /etc/nginx/sites-enabled
RUN ln -s /etc/nginx/sites-available/forkrecipes-ssl.nginx.conf /etc/nginx/sites-enabled/

CMD ["nginx", "-g", "daemon off;"]
